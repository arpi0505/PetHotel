    ViewData["Title"] = "Index";
}

<h1>Animale cazate</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].Owner.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetModel[0].Room.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PetModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
