@page
@model Kosorus_Arpad_Hotel.Pages.Pet.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.PetModel[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PetModel[0].Species)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PetModel[0].Owner.Name)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.PetModel)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Species)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Owner.Name)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
